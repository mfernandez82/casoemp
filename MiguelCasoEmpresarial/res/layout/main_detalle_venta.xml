<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#E0F8E0">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre_cliente_a_facturar" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/cliente_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_agregar_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:background="#ff0093ff"
         android:onClick="ingresar"
        android:text="@+string/agregar_producto" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/lv_detalle_venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </TableRow>
    
    <Button
        android:id="@+id/RegistroVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registrar_venta" />

    

</LinearLayout>