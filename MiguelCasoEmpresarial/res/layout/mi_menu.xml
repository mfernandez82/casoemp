<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fo_inac_me"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.mfernandez.tarea2.MiMenu" >

    <Button
        android:id="@+id/btn_venta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bienvenido"
        android:text="Efectuar venta" />

    <Button
        android:id="@+id/btn_producto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_venta"
        android:text="Productos" />

    <Button
        android:id="@+id/btn_resumen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_producto"
        android:text="Resumen" />

    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_cliente"
        android:layout_alignParentRight="true"
        android:text="Listado de opciones" />

    <Button
        android:id="@+id/btn_cliente"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bienvenido"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="Clientes" />

</RelativeLayout>